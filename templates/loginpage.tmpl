                        <input name="username" class="form-control input-lg" placeholder="Company Name" />
                    </div>
                    <div class="form-group m-b-20">
                        <input name="password" class="form-control input-lg" placeholder="Password" />
                    </div>
                    <div class="checkbox m-b-20">
                        <label>
                            <input type="checkbox" /> Remember Me
                        </label>
                    </div>
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-custom btn-block btn-lg">Sign me in</button>
                    </div>
                    <div class="m-t-20">
                        Not a member yet? Click <a href="/register">here</a> to register.
                    </div>
                </form>
            </div>
        </div>
